
FROM node:20.12.2

RUN apt-get update && apt-get install -y postgresql-client

WORKDIR /app

# Важно для кеширования слоев
COPY app/package.json package.json
COPY app/package-lock.json package-lock.json

RUN npm ci

COPY app/. .

EXPOSE 8080
ENV NODE_ENV=production
RUN make build

CMD ["npm", "start"]
